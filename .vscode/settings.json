{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sfdx": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.documentSelectors": [
    "**/*.cls",
    "**/*.apex",
    "**/*.apexc",
    "**/*.trigger",
    "**/*.html",
    "**/*.cmp",
    "**/*.page",
    "**/*.component",
    "**/*.md"
  ]
}
